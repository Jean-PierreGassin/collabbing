{
  "name": "jean-pierregassin/collabbing",
  "description": "Collaborate better.",
  "keywords": [
    "collaborate",
    "ideas"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": "^7.4",
    "fideloper/proxy": "^4.0",
    "graham-campbell/github": "^8.6",
    "graham-campbell/markdown": "^11.2",
    "laravel/framework": "^6.0",
    "laravel/helpers": "^1.1",
    "laravel/socialite": "^4.3",
    "laravel/tinker": "^2.2",
    "laravelcollective/html": "^6.0",
    "php-http/guzzle6-adapter": "^2.0"
  },
  "require-dev": {
    "filp/whoops": "^2.0",
    "fzaninotto/faker": "^1.4",
    "laravel/dusk": "^5.9",
    "mockery/mockery": "^1.0",
    "nunomaduro/collision": "^2.0",
    "phpunit/phpunit": "^7.0"
  },
  "autoload": {
    "classmap": [
      "database/seeds",
      "database/factories"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": [
      ]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ],
    "test": "phpunit --colors=always",
    "test-integration": "phpunit --testsuite=integration --colors=always",
    "test-all": "phpunit --testsuite=stable,integration --colors=always",
    "check-style": "phpcs -p -s --cache",
    "fix-style": "phpcbf -p -s"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
